<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Employee</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to employees_path, class: button_class(theme: "transparent") do %>
      All Employees
      <% end %>
      <%= link_to edit_employee_path(@employee), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Employee name:</p>
        <p><%= @employee.employee_name %></p>
      </li>
      <li>
        <p class="font-semibold">Employee address:</p>
        <p><%= @employee.employee_address %></p>
      </li>
      <li>
        <p class="font-semibold">Employee dob:</p>
        <p><%= @employee.employee_dob %></p>
      </li>
      <li>
        <p class="font-semibold">Employee position:</p>
        <p><%= @employee.employee_position %></p>
      </li>
      <li>
        <p class="font-semibold">Employee salary:</p>
        <p><%= @employee.employee_salary %></p>
      </li>
  </ul>
</div>
